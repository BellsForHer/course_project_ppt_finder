<h1>Upload a PowerPoint Template</h1>
<%= form_with(model: @template) do |form| %>
<% if @template.errors.any? %>
        <% @template.errors.full_messages.each do |message| %>
            <div>
                <%= message %>
            </div>
            <% end %>
        <% end %>
    
        <div>
            <%= form.label :title %>
            <%= form.text_field :title %>
        </div>
        <div>
            <%= form.label :image_path %>
            <%= form.text_field :image_path %>
        </div>
        <%= form.label :tag_id %>
        <%= form.collection_select(:tag_ids, Tag.all, :id, :name, {}, {multiple:true}) %>

        <%= form.label :tag_id %>
        <%= form.text_field :tag_ids %>

        <%= form.label :file, style: "display: block" %>
        <%= form.file_field :file %>


    <%= form.submit :"Upload" %>

<% end %>