<div class="container">


  <div class="row">
    <% @templates.limit(10).each do |template| %>
      <div class="col-xs-12.col-md-6.col-lg-4">
        <div class="card" style="width: 100%; margin-bottom: 1rem">
  
          <%= image_tag template.image_path, class: "card-img-top"%>
        <div class="card-body">
          <h5 class="card-title"><%= template.title %></h5>
          
          <p class="card-text"><%=template.user.username if template.user%></p>

          <% template.tags.each do |tag| %>
          <p class="card-text"><%=tag.name%></p>
          <%end%>
          
          
        
       
         
    
          <%= link_to "View this Template", template, class: "btn btn-primary" %>
    
        </div>
      </div>
  </div>
  <% end %>
</div>

</div>