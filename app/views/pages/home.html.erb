<h1 class="text-center">Never Design a PowerPoint Again</h1>

<div class="container">

  <div class="row">
    <% @templates.limit(2).each do |template| %>
      <div class="col-xs-12.col-md-6.col-lg-4">
        <div class="card" style="width: 75%; margin-bottom: 1rem">
  
          <%= image_tag template.image_path, class: "card-img-top"%>
        <div class="card-body">
          <h5 class="card-title"><%= template.title %></h5>
          <p class="card-text"><%= tag.name %></p>
    
          <%= link_to "View this Template", template, class: "btn btn-primary" %>
    
        </div>
      </div>
  </div>
  <% end %>
</div>

</div>