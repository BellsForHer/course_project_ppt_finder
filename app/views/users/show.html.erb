<h1>PowerPoint Templates</h1>


 
 <h3 style="color: blue"><%= @user.username %></h3>   


<div class="container">


  <div class="row">
    <% @user.templates.each do |template| %>
      <div class="col-xs-12.col-md-6.col-lg-4">
        <div class="card" style="width: 100%; margin-bottom: 1rem">
  
          <%= image_tag template.image_path, class: "card-img-top"%>
        <div class="card-body">
          <h5 class="card-title"><%= template.title %></h5>
          
          

          <% template.tags.each do |tag| %>
          <p class="card-text"><%=tag.name%></p>
          <%end%>
          
          
        
       
         
    
          <%= link_to "Show", template_path(template), class: "btn btn-primary" %>
    
        </div>
      </div>
  </div>
  <% end %>
</div>

</div>
